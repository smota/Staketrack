# StakeTrack Production Environment Configuration

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0
APP_ENVIRONMENT=PRODUCTION
BASE_URL=/

# Feature Flags
APP_USE_EMULATORS=false
APP_ENABLE_ANALYTICS=true

# API Configuration
APP_API_BASE_URL=https://europe-west1-staketrack-prod.cloudfunctions.net

# Firebase non-sensitive configuration
# Actual API keys and secrets should ONLY be in .env.production.local (gitignored)
APP_FIREBASE_AUTH_DOMAIN=staketrack-prod.firebaseapp.com
APP_FIREBASE_PROJECT_ID=staketrack-prod
APP_FIREBASE_STORAGE_BUCKET=staketrack-prod.firebasestorage.app
APP_FIREBASE_FUNCTIONS_REGION=europe-west1

# Production settings
APP_USE_EMULATORS=false

# AI Configuration - Non-sensitive
# Uses Firebase Vertex AI with Gemini models
APP_AI_MODEL=gemini-1.5-pro
APP_AI_ENABLED=true
APP_AI_WEEKLY_LIMIT=10